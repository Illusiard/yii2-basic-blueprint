{
  "name": "illusiard/yii2-basic-blueprint",
  "description": "Yii2 Basic Blueprint with interactive initializer (Docker + env + config builder).",
  "type": "project",
  "license": "BSD-3-Clause",
  "require": {
    "php": "^8.2",
    "symfony/console": "^7.0",
    "symfony/process": "^7.4"
  },
  "autoload": {
    "psr-4": {
      "Illusiard\\Yii2BasicBlueprint\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Illusiard\\Yii2BasicBlueprint\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php bin/bootstrap"
    ],
    "blueprint:bootstrap": [
      "@php bin/bootstrap"
    ],
    "test": [
      "@php vendor/bin/phpunit"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5"
  }
}
